<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h3>以下の内容で、ツイートする</h3>

<%= form_for(@welcome) do |f| %>
  <!-- `f.hidden_field`を使用して、リクエストパラメータに値を設定できるようにしています。 -->
  <%= f.hidden_field :content, class: 'form-control' %>

  <!-- @welcome.contentとすることで、表示用の値を画面に出力しています。 -->
  <p>本文:<%= @welcome.content %></p>
  <%= f.submit 'ツイート', class: 'btn btn-primary btn-block' %>
<% end %>

<%= form_for(@welcome, url: new_welcome_path, method: 'get') do |f| %>
  <%= f.hidden_field :content %>
  <%= f.submit "もどる", name: 'back', class: 'btn btn-default btn-block' %>
<% end %>
  </div>
</div>