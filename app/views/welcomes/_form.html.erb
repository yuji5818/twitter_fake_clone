<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
<p id="notice"><%= notice %></p>
<%= form_for(@welcome, url: choose_new_or_edit) do |f| %>

  <% if @welcome.errors.any? %>
    <div id="error_explanation">
      <h2><%= @welcome.errors.count %>件のエラーがあります。</h2>

      <ul>
        <% @welcome.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
          <% end %>
      </ul>
    </div>    
 <% end %>

  <%= f.label :ツイート内容 %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.submit 'ツイート', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "ツイート一覧にもどる", welcomes_path %>
  </div>
</div>